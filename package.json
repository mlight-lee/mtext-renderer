{
  "name": "@mlightcad/mtext-renderer",
  "version": "0.4.4",
  "description": "AutoCAD MText renderer based on Three.js",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "vite build",
    "build:example": "vite build --config examples/vite.config.ts",
    "example": "npm run build:example && vite --config examples/vite.config.ts",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\" \"examples/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,js,jsx}\" \"examples/**/*.{ts,tsx,js,jsx}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\" \"examples/**/*.{ts,tsx,js,jsx}\""
  },
  "keywords": [
    "autocad",
    "mtext",
    "three.js",
    "renderer",
    "3d",
    "text"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mlightcad/mtext-parser": "^1.2.0",
    "@mlightcad/shx-parser": "^1.0.4",
    "opentype.js": "^1.3.4",
    "idb": "^8.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/opentype.js": "^1.3.8",
    "@types/three": "^0.172.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "cp-cli": "^2.0.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.1.1",
    "typescript": "~5.3.3",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0"
  },
  "peerDependencies": {
    "three": "^0.172.0"
  }
}
